<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:paddingLeft="@dimen/nav_header_padding"
    android:paddingTop="@dimen/nav_header_padding"
    android:paddingRight="@dimen/nav_header_padding"
    android:paddingBottom="@dimen/nav_header_padding_small">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header.email"
        android:id="@+id/textView2"
        android:textSize="@dimen/nav_header_font_size"
        android:textColor="@color/white"
        android:fontFamily="@string/roboto.regular"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header.name"
        android:id="@+id/textView3"
        android:textSize="@dimen/nav_header_font_size"
        android:textColor="@color/white"
        android:fontFamily="@string/roboto.medium"
        android:layout_above="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="@dimen/nav_rating_size"
        android:layout_height="@dimen/nav_rating_size"
        android:background="@drawable/rating"
        android:id="@+id/relativeLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header.rating"
            android:textSize="@dimen/nav_header_font_size"
            android:textColor="@color/white"
            android:fontFamily="@string/roboto.medium"
            android:id="@+id/textView4"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/nav_photo_size"
        android:layout_height="@dimen/nav_photo_size"
        android:id="@+id/photo"
        android:src="@drawable/avatar"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>